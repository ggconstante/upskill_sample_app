<div class="container">
    <div class="row"> 
      
    <h1>Contact Me!</h1>
    
    <!--this will divide the column to 4 by using the grid system and offset is to make it center -->
    <div class="col-md-4 col-md-offset-4">
            <!--class = "well" is the reason this is wrapped in a fancy box-->
            <div class="well">
                <%= form_for "/contacts" do |f| %>
                    <!--this is for the individual form-->
                    <div class="form-group">
                    <%= f.label       :name %>
                    <%= f.text_field  :name, class: 'form-control' %>
                    </div>
            
                    <div class="form-group">
                    <%= f.label       :email %>
                    <%= f.text_field  :email, class: 'form-control' %>
                    </div>
            
                    <div class="form-group">
                    <%= f.label      :comments %>
                    <%= f.text_area  :comments, class: 'form-control' %>
                    </div>
            
                    <%= f.submit 'Submit', class: 'btn btn-default' %>

                <% end %>
            </div>
        </div>
    </div>
</div>

